<div class="modal" tabindex="-1" role="dialog" id="Modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Aviso</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!--if (ViewBag.ErroresExcel == null &&)
            {
                <div class="modal-body">
                    <div class="alert alert-success" role="alert">
                        <h5>@@ViewBag.Mensaje</h5>
                    </div>
                </div>
            }-->
            @if (ViewBag.ErroresExcel != null)
            {
                <div class="table-responsive">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th scoope="col">Lista de errores</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var error in ViewBag.ErroresExcel)
                            {
                                <tr>
                                    <td>@error</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="modal-body">
                    <div class="alert alert-success" role="alert">
                        <h5>@ViewBag.Mensaje</h5>
                    </div>
                </div>
            }
            <div class="modal-footer">
                @Html.ActionLink("Continuar", "GetAll", "Usuario", new { area = "" }, htmlAttributes: new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
</div>
<script>$('#Modal').modal();</script>
